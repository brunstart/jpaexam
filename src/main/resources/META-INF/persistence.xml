<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="lionPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.example.jpa.User</class> <!-- 패키지 명, 클래스 명이 일치해야 함 -->
        <class>org.example.jpa.Product</class> <!-- 패키지 명, 클래스 명이 일치해야 함 -->
        <class>org.example.jpa.School</class>
        <class>org.example.jpa.Student</class>
        <class>org.example.jpa.practice.Author</class>
        <class>org.example.jpa.practice.Book</class>
        <class>org.example.jpa.Person</class>
        <class>org.example.jpa.Passport</class>
        <class>org.example.jpa.Project</class>
        <class>org.example.jpa.Employee</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/librarydb"/>
            <property name="jakarta.persistence.jdbc.user" value="spring"/>
            <property name="jakarta.persistence.jdbc.password" value="spring1234"/>



            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>     <!-- 필수 설정, 사용하는 DB에 맞춰서 hibernate dialect를 알려줘야함 -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>    <!-- DDL auto : 테이블 생성에 관련된 옵션 (운영중에 테이블 생성 같은거로 설정하면 안됨 / 데이터 다 날아감)-->
            <property name="hibernate.show_sql" value="true"/>      <!-- 내가 만든 sql을 볼 수 있는 옵션 -->
            <property name="hibernate.format_sql" value="true"/>    <!-- SQL 보여줄 때 포맷팅해서 보여주는 옵션 -->
        </properties>
    </persistence-unit>
</persistence>